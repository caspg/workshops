%p#notice= notice
%p#error= flash[:error]

.col-lg-5.col-lg-offset-1

  = link_to 'Back', category_products_path, class: 'btn btn-primary'
  - if user_signed_in? || current_user_owner?
    = link_to 'Edit', edit_category_product_path(category.id, product.id), class: "btn btn-default"

  %table.table
    %tr
      %td
        %b= "Product title: #{product.title}".upcase
    %tr
      %td= "Description: #{product.description}"
    %tr
      %td= "Price: #{product.price}$"
    %tr
      %td= "Category: #{product.category.name}"
  
  %h3 REVIEWS
  = render reviews
  - if reviews.empty?
    %table.table
      %tr
        %td= "This product has no review yet. You can add first." 

  
.col-lg-5
  .new-review-form
    - if user_signed_in?
      %h3 ADD NEW REVIEW
      = render 'reviews/form'

      

  
