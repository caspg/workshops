%table.table
  %tr
    %td= review.content
    %td.rating{rowspan: "2"}
      %div rating
      %div= review.rating
  %tr
    %td 
      %span
        - if params[:controller] == 'users'
          = "product: #{review.product.title}"
        - else 
          = link_to review.author, review.user
      %span= " | posted: #{review.created_at.to_formatted_s(:dmy)}"
        