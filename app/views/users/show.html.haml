.col-md-8.col-md-offset-2.profile
  .row
    .col-md-3
      %img.img-circle(src='http://lorempixel.com/120/120/animals/')
    .col-md-9
      %h3= @user.firstname + ' ' + @user.lastname
      %p= @user.email + ' | joined ' + time_ago_in_words(@user.created_at) + ' ago'
  .row.activity
    .col-md-4
      %h4 user activity:
    .col-md-4
      %h4= pluralize(@user.products.count, "product")
    .col-md-4
      %h4= pluralize(@user.reviews.count, "review")

.col-md-8.col-md-offset-2.reviews-list
  %h4= @user.firstname.titleize + "'s last reviews"
  - @reviews.each do |review|
    %table.table.table-bordered
      %tr
        %td= review.content
        %td.rating{rowspan: "2"}
          %div rating
          %div= review.rating
      %tr
        %td 
          %span= "product: #{review.product.title}"
          %span= " | posted: #{review.created_at.to_formatted_s(:dmy)}"
        
      


